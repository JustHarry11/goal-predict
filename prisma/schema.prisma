datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  name      String?
  predictions Prediction[]
}

model Fixture {
  id        Int       @id @default(autoincrement())
  teamA     String
  teamB     String
  date      DateTime
  scoreA    Int?
  scoreB    Int?
  predictions Prediction[]
}

model Prediction {
  id              Int       @id @default(autoincrement())
  user            User      @relation(fields: [userId], references: [id])
  userId          Int
  fixture         Fixture   @relation(fields: [fixtureId], references: [id])
  fixtureId       Int
  predictedScoreA Int
  predictedScoreB Int
  points          Int?
}
